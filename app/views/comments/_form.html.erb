<% if logged_in? %>

<%= form_for([@article, @article.comments.build]) do |f| %>

<%= render 'shared/error_messages', object: f.object %>

  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, class: 'form-control', value: current_user.first_name + " " + current_user.last_name, readonly: true %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, class: 'form-control', value: current_user.id, readonly: true %>
  </p>

  <p>
    <%= f.submit "Submit", class: "btn-blue btn-primary" %>
  </p>
<% end %>

<% end %>

<%= form_for @article do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>      
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, class: 'form-control' %>      
  </p>
 
  <p>
    <%= f.submit "Submit", class: "btn-blue btn-primary" %>      
  </p>
 
<% end %>
